@model Supermarket_system_with_ASP.NET_Core.Models.Estoque; //Tipando o Form -

@{
    Layout = "_LayoutAdmin";
}

<h3>Novo Estoque</h3>
<hr>
<form class="form-horizontal" asp-controller="Estoque" asp-action="Salvar">
    <div class="form-group">
        <label asp-for="Produto">Produto</label>
        <select class="form-control" asp-for="ProdutoId"
            asp-items='@(new SelectList(@ViewBag.Produtos, "Id","Nome"))'></select>
    </div>
    <div class="form-group">
        <label asp-for="Quantidade">Quantidade</label>
        <input class="form-control" asp-for="Quantidade" type="number" step="any" placeholder="Quantidade"><br>
    </div>
    <button class="btn btn-success">Cadastrar</button>
</form>