@model Supermarket_system_with_ASP.NET_Core.DTO.CategoriaDTO; //Tipando o Form - 

@{
    Layout = "_LayoutAdmin";
}

<h3>Nova Categoria</h3>
<hr>
<form class="form-horizontal" asp-controller="Categorias" asp-action="Salvar" >
    <input type="hidden" asp-for="Id" value="0">
    <label asp-for="Nome">Nome</label>
    <input type="text" asp-for="Nome" class="form-control" placeholder="Nome da Categoria">
    <span asp-validation-for="Nome"></span>
    
    <br>
    <br>
    <button class="btn btn-success">Cadastrar</button>
</form>