@model Supermarket_system_with_ASP.NET_Core.DTO.PromocaoDTO; 

<!--
Como estamos recebendo lidando com um objeto do tipo PromocaoDTO e na rota estamos passando um objeto desse tipo já criado,
o ASP.NET automaticamente atribui o asp-for ao objeto que foi passado pela action, sendo assim ele já exibe ele na tela.-->

@{
    Layout = "_LayoutAdmin";
}

<h3>Editar Promoção</h3>
<hr>
<form class="form-horizontal" asp-controller="Promocoes" asp-action="Atualizar">
    <div class="form-group">
        <input type="hidden" asp-for="Id">
    </div>

    <div class="form-group">
        <label asp-for="Nome">Nome</label>
        <input type="text" asp-for="Nome" class="form-control" placeholder="Nome da Promoção">
        <span asp-validation-for="Nome"></span>
    </div>

    <div class="form-group">
        <label asp-for="ProdutoID">Produto</label>
        <select class="form-control" asp-for="ProdutoID"
            asp-items='@(new SelectList(@ViewBag.Produtos, "Id","Nome"))'></select>
    </div>

    <div class="form-group">
        <label asp-for="Porcentagem">Porcentagem</label>
        <input type="number" min="0" max="100" asp-for="Porcentagem" class="form-control" placeholder="10%">
        <span asp-validation-for="Porcentagem"></span>
    </div>
    <button class="btn btn-success">Atualizar</button>
</form>