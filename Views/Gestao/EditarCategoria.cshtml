@model Supermarket_system_with_ASP.NET_Core.DTO.CategoriaDTO; 

/*
Como estamos recebendo lidando com um objeto do tipo CategoriaDTO e na rota estamos passando um objeto desse tipo já criado,
o ASP.NET automaticamente atribui o asp-for ao objeto que foi passado pela action, sendo assim ele já exibe ele na tela.
*/

@{
    Layout = "_LayoutAdmin";
}

<h3>Editar Categoria</h3>
<hr>
<form class="form-horizontal" asp-controller="Categorias" asp-action="Salvar" >
    <input type="hidden" asp-for="Id" value="0">
    <label asp-for="Nome">Nome</label>
    <input type="text" asp-for="Nome" class="form-control" placeholder="Nome da Categoria">
    <span asp-validation-for="Nome"></span>
    
    <br>
    <br>
    <button class="btn btn-success">Atualizar</button>
</form>