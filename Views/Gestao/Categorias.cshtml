@model IEnumerable<Categoria>

@{
    Layout = "_LayoutAdmin";
}

<h2>Categorias</h2>
<hr>
<a asp-controller="Gestao" asp-action="NovaCategoria" class="btn btn-success"> Criar nova Categoria </a>
<hr>

<script>
    $(document).ready( function () {
        $('#categorias').DataTable();
        console.log("Salve");
    } );
</script>

<table id="categorias" class="table table-striped- table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>Nome</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var categoria in Model)
        {
            <tr>
                <th>@categoria.Id</th>
                <th>@categoria.Nome</th>
                <th>
                    <button class="btn btn-primary">Editar</button> <button class="btn btn-danger">Deletar</button>
                </th>
            </tr>
        }
    </tbody>
</table>